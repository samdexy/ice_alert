<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/TabEmergency"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="562dp"
                        android:background="@drawable/gradient"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/activatedText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Emergency mode"
                            android:textColor="#fffc00"
                            android:textSize="17dp"
                            android:layout_below="@+id/btnSendMessage"
                            android:layout_centerHorizontal="true" />

                        <ImageView
                            android:id="@+id/activatedIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignStart="@+id/btnSendMessage"
                            android:layout_alignTop="@+id/activatedText"
                            android:layout_marginEnd="6dp"
                            android:background="@drawable/activated_ic" />

                        <!--<Button
                            android:id="@+id/btnActivatedCancel"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:text="cancel"
                            android:textColor="#fffc00"
                            android:background="@drawable/button_cancel_emergency"
                            android:layout_alignBottom="@+id/textViewName1"
                            android:layout_alignStart="@+id/activated"
                            android:layout_marginStart="25dp"
                            android:layout_marginBottom="12dp" />-->

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/textViewName1"
                            android:layout_alignBottom="@+id/textViewName1"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="36dp"
                            android:text="1"
                            android:textColor="#b4ffffff"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/textView1"
                            android:layout_below="@+id/textView1"
                            android:layout_marginTop="7dp"
                            android:text="2"
                            android:textColor="#b4ffffff"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/textView2"
                            android:layout_below="@+id/textView2"
                            android:layout_marginTop="7dp"
                            android:text="3"
                            android:textColor="#b4ffffff"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/textView3"
                            android:layout_below="@+id/textView3"
                            android:layout_marginTop="7dp"
                            android:text="4"
                            android:textColor="#b4ffffff"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/textView4"
                            android:layout_below="@+id/textView4"
                            android:layout_marginTop="7dp"
                            android:text="5"
                            android:textColor="#b4ffffff"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/textViewName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/btnSendMessage"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="69dp"
                            android:layout_toEndOf="@+id/textView1"
                            android:text="..."
                            android:textColor="#fff"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/textViewName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/textView2"
                            android:layout_alignBottom="@+id/textView2"
                            android:layout_alignStart="@+id/textViewName1"
                            android:text="..."
                            android:textColor="#fff"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/textViewName3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/textView3"
                            android:layout_alignBottom="@+id/textView3"
                            android:layout_alignStart="@+id/textViewName2"
                            android:text="..."
                            android:textColor="#fff"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/textViewName4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/textView4"
                            android:layout_alignBottom="@+id/textView4"
                            android:layout_alignStart="@+id/textViewName3"
                            android:text="..."
                            android:textColor="#fff"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/textViewName5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/textView5"
                            android:layout_alignBottom="@+id/textView5"
                            android:layout_alignStart="@+id/textViewName4"
                            android:text="..."
                            android:textColor="#fff"
                            android:textSize="17dp" />

                        <Button
                            android:id="@+id/btnSendMessage"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="64dp"
                            android:background="@drawable/button_emergency"
                            android:drawableTop="@drawable/ic_emergency"
                            android:paddingTop="40dp"
                            android:text="CALL FOR HELP"
                            android:textColor="#fff"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btnSettings"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="36dp"
                            android:layout_marginTop="22dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_settings" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabContactList"
                    android:layout_width="fill_parent"
                    android:layout_height="549dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/gradient"
                        android:paddingTop="25dp"
                        android:text="My Contacts"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="20dp" />

                    <ListView
                        android:id="@+id/listView"
                        android:layout_width="fill_parent"
                        android:layout_height="139dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.94" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/myFAB"
                        backgroundTint="@color/colorAccent"

                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentTop="false"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/plus"
                        app:backgroundTint="@color/colorAccent" />

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>