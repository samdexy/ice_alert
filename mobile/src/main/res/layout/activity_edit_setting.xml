<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditSettingsActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="25dp"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="#E64944"
        android:textSize="20dp"
        android:background="@drawable/button_cancel"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <EditText
            android:id="@+id/txtEditSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_weight="0.09"
            android:ems="10"
            android:hint="Edit setting"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEditSettingCancel"
                android:background="@drawable/button_cancel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#D91B56"
                android:text="Cancel" />

            <Button
                android:id="@+id/btnEditSettingSave"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_add_save"
                android:textColor="#fff"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="Save" />


        </LinearLayout>

        <TextView
            android:id="@+id/instructionSettings"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Settings text"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="20dp"
            android:layout_weight="0.18" />


    </LinearLayout>

</LinearLayout>